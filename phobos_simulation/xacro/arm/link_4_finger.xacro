<!-- VISUAL -->
    <xacro:macro name="link_4_finger_visual">
        <origin xyz="0.195 -0.078 -0.571" rpy="1.59 -0.18 -1.75"/>
        <geometry>
            <mesh filename="package://phobos_meshes/rover_stl/ruchoma_cz.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </xacro:macro>

<!-- MATERIAL -->
    <xacro:macro name="link_4_finger_material">
        <material name="link_4_finger_color">
            <color rgba=".4 .4 .8 1"/>
        </material>
    </xacro:macro>

<!-- LINK -->
    <xacro:macro name="link_4_finger" params="name parent x y z side">

        <link name="${name}">

            <!-- <visual>
                <xacro:link_4_finger_visual/>
                <xacro:link_4_finger_material/>
            </visual> -->

            <!-- <visual>
                <xacro:link_4_finger_geometry_1/>
                <xacro:link_4_finger_material/>
            </visual>
            <visual>
                <xacro:link_4_finger_geometry_2/>
                <xacro:link_4_finger_material/>
            </visual>
            <visual>
                <xacro:link_4_finger_geometry_3/>
                <xacro:link_4_finger_material/>
            </visual>
            <visual>
                <xacro:link_4_finger_geometry_4/>
                <xacro:link_4_finger_material/>
            </visual> -->

            <collision>
                <xacro:link_4_finger_geometry_1/>
            </collision>
            <collision>
                <xacro:link_4_finger_geometry_2/>
            </collision>
            <collision>
                <xacro:link_4_finger_geometry_3/>
            </collision>
            <collision>
                <xacro:link_4_finger_geometry_4/>
            </collision>

            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <mass value=".2"/>
                <inertia ixx=".0003" ixy="0.000" ixz="0.000" iyy=".0003" iyz="0.000" izz=".0003"/>
            </inertial>
        </link>
        <gazebo reference="${name}">
            <mu1> 10 </mu1>
            <mu2> 10 </mu2>
            <material> Gazebo/Grey </material>
            <selfCollide>True</selfCollide>
        </gazebo>

        <joint name="${name}_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="${name}"/>
            <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
        </joint>

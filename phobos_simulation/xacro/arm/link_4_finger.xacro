<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="link_4_finger">

<!-- GEOMETRY -->
    <xacro:macro name="link_4_finger_geometry_1">
        <origin rpy="0 0 0" xyz="${link_4_finger_length/4} 0 0" />
        <geometry>
            <box size="${link_4_finger_length/2} ${link_4_finger_width} ${link_4_finger_height}"/>
        </geometry>
    </xacro:macro>

    <xacro:macro name="link_4_finger_geometry_2">
        <origin rpy="0 0 ${1*side}" xyz="${link_4_finger_length/2 + 0.007} ${0.013*side} 0" />
        <geometry>
            <box size="0.033 ${link_4_finger_width} ${link_4_finger_height}"/>
        </geometry>
    </xacro:macro>

    <xacro:macro name="link_4_finger_geometry_3">
        <origin rpy="1.57075 0 0" xyz="${link_4_finger_length/2-0.01} ${side*0.027} ${link_4_finger_height/2}" />
        <geometry>
            <box size="0.05 0.003 0.003"/>
        </geometry>
    </xacro:macro>

    <xacro:macro name="link_4_finger_geometry_4">
        <origin rpy="1.57075 0 0" xyz="${link_4_finger_length/2-0.01} ${side*0.027} ${-link_4_finger_height/2}" />
        <geometry>
            <box size="0.05 0.003 0.003"/>
        </geometry>
    </xacro:macro>


<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bogie_bearing">

<!-- GEOMETRY -->
    <xacro:macro name="bogie_bearing_geometry">
        <origin rpy="1.57075 0 0"/>
        <geometry>
            <cylinder length="${bogie_bearing_length}" radius="${bogie_bearing_radius}"/>
        </geometry>
    </xacro:macro>

<!-- VISUAL -->
    <xacro:macro name="bogie_visual_left">
        <origin xyz="-0.288 -.230 -0.21" rpy="1.57075 0 1.57075"/>
        <geometry>
            <mesh filename="package://phobos_meshes/rover_stl/bogie_lewe_stl.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </xacro:macro>
    <xacro:macro name="bogie_visual_right">
        <origin xyz="-0.288 -.195 -0.21" rpy="1.57075 0 1.57075"/>
        <geometry>
            <mesh filename="package://phobos_meshes/rover_stl/bogie_prawe_stl.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </xacro:macro>

<!-- MATERIAL -->
    <xacro:macro name="bogie_bearing_material">
        <material name="dark_green">
            <color rgba=".3 .5 .2 1"/>
        </material>
    </xacro:macro>

<!-- LINK -->
    <xacro:macro name="bogie_bearing" params="name parent x y z side">
        <link name="${name}">

            <visual>
                <xacro:if value="${side == 1}"> <xacro:bogie_visual_left/> </xacro:if>
                <xacro:if value="${side == -1}"> <xacro:bogie_visual_right/> </xacro:if>
                <xacro:rocker_material/>
            </visual>

            <collision>
                <xacro:bogie_bearing_geometry/>
            </collision>
            <inertial>
                <mass value="6.143721"/>
                <xacro:if value="${side == 1}"> <!-- LEFT-->
                    <origin xyz="-0.000010 0.045682 0.012347" rpy="0 0 0"/>
                    <inertia ixx="0.082737" ixy="0.015401" ixz="-0.000002" iyy="0.236740" iyz="0.013790" izz="0.176983"/>
                </xacro:if>
                <xacro:if value="${side == -1}"> <!-- RIGHT-->
                    <origin xyz="-0.000007 -0.045682 0.012347" rpy="0 0 0"/>
                    <inertia ixx="0.082737" ixy="-0.015402" ixz="0.000003" iyy="0.236740" iyz="-0.013790" izz="0.176983"/>
                </xacro:if>
            </inertial>
        </link>

        <gazebo reference="${name}">
            <mu1> .2 </mu1>
            <mu2> .2 </mu2>
            <material> Gazebo/Grey </material>
            <selfCollide> True </selfCollide>
        </gazebo>


            <joint name="${name}_joint" type="revolute">
                <parent link="${parent}"/>
                <child link="${name}"/>
                <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
                <axis xyz="0 1 0"/>
                <limit effort="1" velocity="1" lower="-0.5" upper="0.5"/>
                <dynamics damping="1"/>
            </joint>

            <gazebo>
                <plugin name="joint_encoder_${name}" filename="libJointEncoder.so">
                    <joint>${name}_joint</joint>
                    <topic>/simulation/encoder/abs/${name}</topic>
                    <lower>-0.5</lower>
                    <upper>0.5</upper>
                    <absolute>1</absolute>
                    <resolution>10000</resolution>
                </plugin>
            </gazebo>

            <gazebo reference="${name}_joint">
                <provideFeedback value="true"/>
            </gazebo>

            <transmission name="${name}_transmission">
                <type>transmission_interface/SimpleTransmission</type>
                <joint name="${name}_joint">
                    <hardwareInterface>EffortJointInterface</hardwareInterface>
                </joint>
                <actuator name="${name}_motor">
                    <hardwareInterface>EffortJointInterface</hardwareInterface>
                    <mechanicalReduction>1</mechanicalReduction>
                </actuator>
            </transmission>

    </xacro:macro>

</robot>

<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rocker">

<!-- GEOMETRY -->
    <xacro:macro name="rocker_geometry">
        <origin rpy="1.57075 0 0"/>
        <geometry>
            <cylinder length="${rocker_bearing_length}" radius="${rocker_bearing_radius}"/>
        </geometry>
    </xacro:macro>

<!-- MATERIAL -->
    <xacro:macro name="rocker_material">
        <material name="dark_green">
            <color rgba=".3 .5 .2 1"/>
        </material>
    </xacro:macro>

<!-- LINK -->
    <xacro:macro name="rocker_bearing" params="name parent x y z">
        <link name="${name}">
            <visual>
                <xacro:rocker_geometry/>
                <xacro:rocker_material/>
            </visual>
            <collision>
                <xacro:rocker_geometry/>
            </collision>
            <inertial>
                <mass value="3"/>
                <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
            </inertial>
        </link>

            <joint name="${name}_joint" type="revolute">
                <parent link="${parent}"/>
                <child link="${name}"/>
                <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
                <axis xyz="0 1 0"/>
                <limit effort="10000" velocity="1" lower="-0.5" upper="0.5"/>
                <dynamics damping="2" friction="0"/>
            </joint>

            <!--joint name="${name}_joint" type="fixed">
                <parent link="${parent}"/>
                <child link="${name}"/>
                <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
            </joint-->

            <gazebo reference="${name}">
                <mu1> .2 </mu1>
                <mu2> .2 </mu2>
                <material> Gazebo/Grey </material>
                <selfCollide> True </selfCollide>
            </gazebo>

            <!--transmission name="${name}_transmission">
                <type>transmission_interface/SimpleTransmission</type>
                <joint name="${name}_joint">
                    <hardwareInterface>EffortJointInterface</hardwareInterface>
                </joint>
                <actuator name="${name}_motor">
                    <hardwareInterface>EffortJointInterface</hardwareInterface>
                    <mechanicalReduction>1</mechanicalReduction>
                </actuator>
            </transmission-->

    </xacro:macro>

</robot>
